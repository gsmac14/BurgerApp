<h1>Burger App</h1>


<div class="container">
  <div class="row align-items-start">
    <div class="col">
      <h2>Eat-Da-Burger!</h2>
      <ul>
        {{#each burger}}
        {{#unless devour}}
        {{> burger/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col">
      <div class="card">
        <img class="card-img-top"
          src=" https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ7vPigrlZG87mf71WevJ1_WAf_uAGc_YKpmg&usqp=CAU "
          alt="burger image">
      </div>
      <form class="create-form">

        <div class="form-group">
          <label for="burgerName">Burger:</label>
          <input type="text" id="burgerName" name="name">
        </div>
        {{!-- <button type="button">Add Burger</button> --}}
        <button type="submit" class="btn btn-danger"  >Add Burger</button>
      </form>
    </div>
    <div class="col">
      <h2>HMMMMM Satisfied!</h2>
      <ul>
        {{#each burger}}
        {{#if devour}}
        {{> burger/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>


</div>