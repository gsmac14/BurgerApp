<h1>Burger!</h1>

<h2>Eat-Da-Burger!</h2>

<div class="container">

<ul>
  {{#each burger}}
    {{#unless devour}}
      {{> burger/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<form class="create-form">

  <div class="form-group">
    <label for="burgerName">Burger:</label>
    <input type="text" id="burgerName" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

<ul>
  {{#each burger}}
    {{#if devour}}
      {{> burger/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>
</div>




